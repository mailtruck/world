doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h2
      a(href='/') Mailtruck World
    if uid
      ul(class='menu')
        li
          a(href='/notes/') new note
        li
          a(href='/logout') logout
    unless uid
      ul(class='menu')
        li
          a(href='/login') login
        li
          a(href='/register') register
    block content
